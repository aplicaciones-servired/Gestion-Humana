{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": ["react", "react-dom"],
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"], 
    },
    "ignoreDeprecations": "5.0"
  },
  "extends": "astro/tsconfigs/base",
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "env.schema.mjs"
  ],
  "exclude": ["dist", "node_modules", "src/**/*.js"]
}
